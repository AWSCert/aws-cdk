{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["dom", "es2018"],
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "composite": true,
    "incremental": true,
    "importHelpers": true,
  },
  "include": ["**/*.ts"]
}
